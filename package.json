{
  "name": "alpha-observatory-management-system",
  "version": "0.1.1",
  "private": false,
  "description": "Alpha Observatory Management System",
  "author": {
    "name": "Filipe Mota",
    "github": "https://github.com/Drete457"
  },
  "copyright": "Copyright 2020 - 2021 CEO NADA",
  "repository": {
    "type": "git",
    "url": "https://github.com/Drete457/alphaobservatorymanagementsystem.git"
  },
  "main": "public/start-electron.cjs",
  "browser": "public/start-electron.cjs",
  "module": "public/start-electron.cjs",
  "type": "module",
  "dependencies": {
    "@coreui/coreui-pro": "^3.4.0",
    "@coreui/icons": "2.0.0-beta.4",
    "@coreui/icons-react": "^1.1.0",
    "@coreui/react": "^3.4.6",
    "@coreui/utils": "^1.3.1",
    "core-js": "^3.9.1",
    "export-from-json": "^1.3.9",
    "firebase": "^8.3.1",
    "firebase-tools": "^9.6.1",
    "i18next": "^19.9.2",
    "node-sass": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-grid-layout": "0.18.3",
    "react-i18next": "^11.8.10",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-select": "^4.2.1",
    "read-excel-file": "^5.2.8",
    "recoil": "^0.1.3",
    "electron-is": "^3.0.0",
    "electron-is-dev": "^2.0.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "set \"CI=false\" && react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "build:all": "yarn build-electron && electron-builder build --publish never -mwl",
    "start": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb/hooks",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-react": 2,
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.js?(x)"
        ],
        "rules": {}
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 10",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "babel-core": "^7.0.0-bridge.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "concurrently": "^6.0.0",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "Alpha-Observatory",
    "productName": "Alpha-Observatory",
    "files": [
      "build/**/*",
      "public/start-electron.js",
      "package.json"
    ],
    "extends": null
  }
}
